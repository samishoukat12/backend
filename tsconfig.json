  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": [
      "es2020",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}